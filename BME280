//4 pinli BME 280 grove sensörleri için
//VIN 5V. SCL A5e, SDA A4e bağlanmalı. 
//12.07.2020

#include "Seeed_BME280.h"
#include <Wire.h>

BME280 bme280;

void setup()
{
  Serial.begin(9600);
  if(!bme280.init()){
    Serial.println("Cihaz Hatası!");
  }
}

void loop()
{
  float pressure;
  
  //Sıcaklık yazdırır
  Serial.print("Sıcaklık: ");
  Serial.print(bme280.getTemperature());
  Serial.println("C");
  
  //Atmosferik basıç verisini yazdırır
  Serial.print("Basınç: ");
  Serial.print(pressure = bme280.getPressure());
  Serial.println("Pa");

  //İrtifa yazdırır
  Serial.print("İrtifa: ");
  Serial.print(bme280.calcAltitude(pressure));
  Serial.println("m");

  //Nem yazdırır
  Serial.print("Nem: ");
  Serial.print(bme280.getHumidity());
  Serial.println("%");

  Serial.println("");

  delay(2000);
}
